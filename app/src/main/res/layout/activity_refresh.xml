<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sky.test.activity.RefreshActivity">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableHeaderTranslationContent="false"
        app:srlEnableFooterTranslationContent="true">

        <com.example.sky.test.view.RefreshHeaderView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#02f">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fdksofksof"/>

        </RelativeLayout>

        <com.example.sky.test.view.RefreshFooterView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="444444"
                android:textSize="23sp"/>

        </com.example.sky.test.view.RefreshFooterView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
